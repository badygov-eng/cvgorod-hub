# Bot Dockerfile для cvgorod-hub
FROM python:3.12-slim

WORKDIR /app

# Установка зависимостей
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Копирование кода
COPY bot/ ./bot/
COPY services/ ./services/
COPY config/ ./config/

CMD ["python", "-c", "from bot.collector import MessageCollector; print('Bot collector module loaded')"]
